<div class="mypage-header">
  <a class="title" href="#"><b>Favo Post</b></a>
  <div class="mypage-header">
    <form class ="search-form" action="#">
      <input class="input-box" placeholder="投稿を探す">
      <button class="search-button">検索</button>
    </form>
  </div>
  <div class="lists">
    <li><%= link_to 'マイページへ戻る', user_path, class: 'post' %></li>
    <% if user_signed_in? && current_user.id == @user.id %>
      <li><%= link_to 'POST', new_post_path, class: 'post'%></li>
    <% end %>
  </div>
</div>

<div class="post-row">
  <% @posts.each do |post| %>
    <div class="post-section">
      <div class="post-img-content">
        <%= image_tag post.image.variant(resize: '700x700'), class:"post-img" %>
      </div>
      <div class="post-content">
        <div class="post-title">
          <h1><%= post.title %></h1>
          <h3><%= l(post.created_at, format: :long) %></h3>
        </div>
        <div class="post-text">
          <p><%= post.text %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
